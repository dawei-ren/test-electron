{
  "name": "test-electron",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "git@github.com:dawei-ren/test-electron.git",
  "author": "David Ren <lovedavidren@outlook.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "test-electron",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "icon": "build/icons/food.png",
      "target": [
        {
          "target": "nsis"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5"
  }
}